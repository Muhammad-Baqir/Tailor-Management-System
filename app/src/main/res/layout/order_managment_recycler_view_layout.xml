<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/orderManagementRecyclerViewLayoutTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/orderManagementRecyclerViewLayoutTextViewCustomerNo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderManagementRecyclerViewLayoutTextViewCustomerNo" />

    <TextView
        android:id="@+id/orderManagementRecyclerViewLayoutTextViewCustomerNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/orderManagementRecyclerViewLayoutTextViewName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/orderManagementRecyclerViewLayoutTextViewId"
        app:layout_constraintTop_toTopOf="@+id/orderManagementRecyclerViewLayoutTextViewName" />

    <TextView
        android:id="@+id/orderManagementRecyclerViewLayoutTextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/orderManagementRecyclerViewLayoutTextViewDDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/orderManagementRecyclerViewLayoutTextViewCustomerNo"
        app:layout_constraintTop_toTopOf="@+id/orderManagementRecyclerViewLayoutTextViewDDate" />

    <TextView
        android:id="@+id/orderManagementRecyclerViewLayoutTextViewDDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/orderManagementRecyclerViewLayoutTextViewName"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/orderManagementRecyclerViewLayoutTextViewId"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>